<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9F90C8"
    tools:context=".activities.payments.PixPaymentScreen">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="900dp"
        android:layout_height="159dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="310dp"
        android:layout_height="90dp"
        android:layout_marginStart="295dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="295dp"
        android:layout_marginBottom="31dp"
        android:text="iCoffee"
        android:textAlignment="center"
        android:textColor="#070202"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar5"
        app:layout_constraintEnd_toEndOf="@+id/toolbar5"
        app:layout_constraintStart_toStartOf="@+id/toolbar5"
        app:layout_constraintTop_toTopOf="@+id/toolbar5" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="601dp"
        android:layout_height="625dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="149dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar5"
        app:srcCompat="@drawable/_00px_link_pra_pagina_principal_da_wikipedia_pt_em_codigo_qr_b_svg" />

    <TextView
        android:id="@+id/pixScreenMessage"
        android:layout_width="900dp"
        android:layout_height="150dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="232dp"
        android:textAlignment="center"
        android:textColor="#050101"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
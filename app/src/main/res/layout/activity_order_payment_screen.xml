<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9F90C8"
    tools:context=".activities.OrderPaymentScreen">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="900dp"
        android:layout_height="159dp"
        android:layout_marginTop="1dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="310dp"
        android:layout_height="90dp"
        android:layout_marginStart="295dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="310dp"
        android:layout_marginBottom="34dp"
        android:text="iCoffee"
        android:textAlignment="center"
        android:textColor="#020101"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintEnd_toEndOf="@+id/toolbar3"
        app:layout_constraintStart_toStartOf="@+id/toolbar3"
        app:layout_constraintTop_toTopOf="@+id/toolbar3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="900dp"
        android:layout_height="50dp"
        android:text="ESCOLHA A FORMA DE PAGAMENTO"
        android:textAlignment="center"
        android:textColor="#090202"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

    <Button
        android:id="@+id/buttonDebitVRPayment"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="325dp"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="64dp"
        android:text="Débito / Refeição"
        android:textColor="#020101"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonPixPayment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonCreditPayment"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="325dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="69dp"
        android:text="Crédito"
        android:textColor="#020101"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonDebitVRPayment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.97" />

    <Button
        android:id="@+id/buttonPixPayment"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="325dp"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="368dp"
        android:text="PIX"
        android:textColor="#020101"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSairPayment"
        android:layout_width="235dp"
        android:layout_height="85dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="625dp"
        android:layout_marginBottom="87dp"
        android:text="SAIR"
        android:textColor="#020101"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>